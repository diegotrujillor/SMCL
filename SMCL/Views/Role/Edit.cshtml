@model SMCLCore.Domain.Model.Role

@{
    ViewBag.Title = "Roles - Editar";
}

<table id="no_css" width="100%">
    <tr>
        <td>
            <div class="titlejQGrid">Editar registro</div>
        </td>
        <td style="text-align: right;">
            <a href="../Index">
                <img src="@Url.Content("~/Content/Images/jnj_reports_go_back.png")" alt="regresar" title="Regresar" border="0" />
            </a>
            <span>&nbsp;Regresar...</span>
        </td>
    </tr>
</table>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <div style="color: #F00; text-decoration: blink;">
            @ViewData["ValidationErrorMessage"].ToString()
        </div>

        <legend>Roles</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            <div style="color: #F00;">
                @Html.LabelFor(model => model.Name, "Nombre (*)")
            </div>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Name, new { maxlength = 80 })
            @Html.ValidationMessageFor(model => model.Name, System.Configuration.ConfigurationManager.AppSettings["EmptyFieldErrorMessage"].ToString())
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description, "Descripción")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Description, new { maxlength = 256 })
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
        <label class="display-message">(*) Campos obligatorios</label>
    </fieldset>
}