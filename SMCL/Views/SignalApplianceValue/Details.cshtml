@model SMCLCore.Domain.Model.SignalApplianceValue

@{
    ViewBag.Title = "Señales por equipo - Detalles";
}

<table id="no_css" width="100%">
    <tr>
        <td>
            <div class="titlejQGrid">Detalles</div>
        </td>
        <td style="text-align: right;">
            <a href="../Index">
                <img src="@Url.Content("~/Content/Images/jnj_reports_go_back.png")" alt="regresar" title="Regresar" border="0" />
            </a>
            <span>&nbsp;Regresar...</span>
        </td>
    </tr>
</table>

<fieldset>
    <legend>Señales por equipo</legend>

    <table id="no_css" width="80%">
        <tr>
            <td style="width: 50%;">
                <div class="display-label">Valor</div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Value)
                </div>
            </td>
            <td>
                <div class="display-label">Equipo</div>
                <div class="display-field">
                    @Html.Display("ApplianceName")
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="display-label">Señal</div>
                <div class="display-field">
                    @Html.Display("SignalName")
                </div>
            </td>
            <td>
                <div class="display-label">Tipos de Alarma</div>
                <div class="display-field">
                    @Html.Display("AlarmTypeName")
                </div>
            </td>
        </tr>
        <tr>
            <td>                    
                <p>
                    @Html.ActionLink("Editar", "Edit", new { id=Model.Id }) |
                    <a href="../Index">
                        <img src="@Url.Content("~/Content/Images/jnj_reports_go_back.png")" alt="regresar" title="Regresar" border="0" />
                    </a>
                    <span>&nbsp;Regresar...</span>
                </p>
            </td>
        </tr>
    </table>
</fieldset>