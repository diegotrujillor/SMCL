@model SMCLCore.Domain.Model.MappingTag

@{
    ViewBag.Title = "Etiquetas de Mapeo - Detalles";
}

<table id="no_css" width="100%">
    <tr>
        <td>
            <div class="titlejQGrid">Detalles</div>
        </td>
        <td style="text-align: right;">
            <a href="../Index">
                <img src="@Url.Content("~/Content/Images/jnj_reports_go_back.png")" alt="regresar" title="Regresar" border="0" />
            </a>
            <span>&nbsp;Regresar...</span>
        </td>
    </tr>
</table>

<fieldset>
    <legend>Etiquetas de mapeo</legend>

    <table id="no_css" width="80%">
        <tr>
            <td style="width: 50%;">
                <div class="display-label">Etiqueta</div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Tag)
                </div>
            </td>
            <td>
                <div class="display-label">Aplicaciones</div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Appliance.NameAppliance)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="display-label">Descripción</div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Description)
                </div>
            </td>
            <td>
                <div class="display-label">Clase Tag</div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.AlarmType.NameAlarmType)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="display-label">Señales</div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Signal.Name)
                </div>
            </td>
            <td>                    
                <p>
                    @Html.ActionLink("Editar", "Edit", new { id=Model.Id }) |
                    <a href="../Index">
                        <img src="@Url.Content("~/Content/Images/jnj_reports_go_back.png")" alt="regresar" title="Regresar" border="0" />
                    </a>
                    <span>&nbsp;Regresar...</span>
                </p>
            </td>
        </tr>
    </table>
</fieldset>